@{
    ViewData["Title"] = "Phân tích doanh thu";
}

<div class="analytics-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="analytics-title mb-1">Phân tích doanh thu</h1>
            <p class="analytics-subtitle mb-0">Bảng điều khiển thông minh toàn diện</p>
        </div>
        <div class="analytics-controls">
            <div class="btn-group" role="group">
                <button class="btn btn-primary" onclick="loadChart('month')">Theo tháng</button>
                <button class="btn btn-outline-primary" onclick="loadChart('year')">Theo năm</button>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="kpi-content">
                <h6 class="kpi-label">Doanh thu tháng</h6>
                <h3 class="kpi-value" id="monthlyRevenue">₫0</h3>
                <span class="kpi-trend" id="monthlyTrend"><i class="fas fa-arrow-up"></i> +0%</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-icon orders">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="kpi-content">
                <h6 class="kpi-label">Đơn hàng tháng</h6>
                <h3 class="kpi-value" id="monthlyOrders">0</h3>
                <span class="kpi-trend" id="ordersTrend"><i class="fas fa-arrow-up"></i> +0%</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-icon total">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="kpi-content">
                <h6 class="kpi-label">Tổng doanh thu</h6>
                <h3 class="kpi-value" id="totalRevenue">₫0</h3>
                <span class="kpi-trend" id="totalTrend"><i class="fas fa-arrow-up"></i> +0%</span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="kpi-card">
            <div class="kpi-icon customers">
                <i class="fas fa-users"></i>
            </div>
            <div class="kpi-content">
                <h6 class="kpi-label">Khách hàng mới</h6>
                <h3 class="kpi-value" id="newCustomers">0</h3>
                <span class="kpi-trend" id="customersTrend"><i class="fas fa-arrow-up"></i> +0%</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-area me-2"></i>Biểu đồ doanh thu</h5>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-pie me-2"></i>Sản phẩm bán chạy</h5>
            </div>
            <div class="card-body">
                <canvas id="productChart" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let revenueChart, productChart;
        
        document.addEventListener('DOMContentLoaded', function() {
            loadAnalytics();
            loadChart('month');
        });
        
        function loadAnalytics() {
            fetch('@Url.Action("GetAnalytics")')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('monthlyRevenue').textContent = '₫' + data.monthlyRevenue.toLocaleString('vi-VN');
                    document.getElementById('monthlyOrders').textContent = data.monthlyOrders;
                    document.getElementById('totalRevenue').textContent = '₫' + data.totalRevenue.toLocaleString('vi-VN');
                    document.getElementById('newCustomers').textContent = data.newCustomers;
                    
                    // Update trends
                    updateTrend('monthlyTrend', data.monthlyGrowth || 0);
                    updateTrend('ordersTrend', data.ordersGrowth || 0);
                    updateTrend('totalTrend', data.totalGrowth || 0);
                    updateTrend('customersTrend', data.customersGrowth || 0);
                });
        }
        
        function updateTrend(elementId, value) {
            const element = document.getElementById(elementId);
            const isPositive = value >= 0;
            const icon = isPositive ? 'fa-arrow-up' : 'fa-arrow-down';
            const className = isPositive ? 'kpi-trend positive' : 'kpi-trend negative';
            
            element.className = className;
            element.innerHTML = `<i class="fas ${icon}"></i> ${isPositive ? '+' : ''}${value.toFixed(1)}%`;
        }
        
        function loadChart(period) {
            fetch(`@Url.Action("GetChartData")?period=${period}`)
                .then(response => response.json())
                .then(data => {
                    updateRevenueChart(data.revenue);
                    updateProductChart(data.products);
                });
        }
        
        function updateRevenueChart(data) {
            const ctx = document.getElementById('revenueChart').getContext('2d');
            
            if (revenueChart) {
                revenueChart.destroy();
            }
            
            revenueChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.labels,
                    datasets: [{
                        label: 'Doanh thu (₫)',
                        data: data.values,
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '₫' + value.toLocaleString('vi-VN');
                                }
                            }
                        }
                    }
                }
            });
        }
        
        function updateProductChart(data) {
            const ctx = document.getElementById('productChart').getContext('2d');
            
            if (productChart) {
                productChart.destroy();
            }
            
            productChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: data.labels,
                    datasets: [{
                        data: data.values,
                        backgroundColor: [
                            '#667eea',
                            '#764ba2',
                            '#f093fb',
                            '#f5576c',
                            '#4facfe'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }
    </script>
}