@model ZOLShop.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="row">
    <div class="col-md-8">
        <h2>Checkout</h2>
        
        <form method="post" action="@Url.Action("ProcessPayment")">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Thông tin giao hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Họ và tên</label>
                                <input type="text" name="FullName" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="tel" name="PhoneNumber" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ giao hàng</label>
                        <input type="text" name="Address" class="form-control" placeholder="Số nhà, tên đường" required>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Phường/Xã</label>
                                <input type="text" name="Ward" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Quận/Huyện</label>
                                <input type="text" name="District" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Tỉnh/Thành phố</label>
                                <input type="text" name="Province" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5>Phương thức thanh toán</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Chọn phương thức thanh toán</label>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="PaymentMethod" value="COD" id="cod" checked>
                            <label class="form-check-label" for="cod">
                                <i class="fas fa-truck me-2"></i>Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="PaymentMethod" value="BankTransfer" id="bank">
                            <label class="form-check-label" for="bank">
                                <i class="fas fa-university me-2"></i>Chuyển khoản ngân hàng
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="PaymentMethod" value="OnlineBanking" id="online">
                            <label class="form-check-label" for="online">
                                <i class="fas fa-credit-card me-2"></i>Thanh toán online qua ngân hàng
                            </label>
                        </div>
                    </div>
                    
                    <div id="bankTransferInfo" class="alert alert-info" style="display: none;">
                        <h6>Thông tin chuyển khoản:</h6>
                        <p class="mb-1"><strong>Ngân hàng:</strong> Vietcombank</p>
                        <p class="mb-1"><strong>Số tài khoản:</strong> 1234567890</p>
                        <p class="mb-1"><strong>Chủ tài khoản:</strong> ZOL Shop</p>
                        <p class="mb-0"><strong>Nội dung:</strong> Thanh toán đơn hàng [Mã đơn hàng]</p>
                    </div>
                    
                    <div id="onlineBankingInfo" class="alert alert-success" style="display: none;">
                        <p class="mb-0">Bạn sẽ được chuyển đến trang thanh toán online của ngân hàng để hoàn tất giao dịch.</p>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Cart")" class="btn btn-secondary">Back to Cart</a>
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-shopping-cart"></i> Đặt hàng ₫@((Model.TotalAmount * 24000).ToString("N0"))
                </button>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Order Summary</h5>
            </div>
            <div class="card-body">
                @foreach (var item in Model.CartDetails)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <span>@item.Product.Name x @item.Quantity</span>
                        <span>₫@((item.Price * 24000).ToString("N0"))</span>
                    </div>
                }
                <hr>
                <div class="d-flex justify-content-between">
                    <strong>Tổng cộng: ₫@((Model.TotalAmount * 24000).ToString("N0"))</strong>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show/hide payment method info
        document.querySelectorAll('input[name="PaymentMethod"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.getElementById('bankTransferInfo').style.display = 'none';
                document.getElementById('onlineBankingInfo').style.display = 'none';
                
                if (this.value === 'BankTransfer') {
                    document.getElementById('bankTransferInfo').style.display = 'block';
                } else if (this.value === 'OnlineBanking') {
                    document.getElementById('onlineBankingInfo').style.display = 'block';
                }
            });
        });
        
        // Format phone number
        document.querySelector('input[name="PhoneNumber"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            e.target.value = value;
        });
    </script>
}