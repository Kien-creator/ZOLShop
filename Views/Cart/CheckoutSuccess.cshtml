@model Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="text-center py-5">
    <i class="fas fa-check-circle fa-4x text-success mb-4"></i>
    <h2>Order Placed Successfully!</h2>
    <p class="lead">Thank you for your purchase</p>
    
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h5 class="card-title">Order Details</h5>
            <p><strong>Order ID:</strong> #@Model.OrderID</p>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy")</p>
            <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("F2")</p>
            <p><strong>Status:</strong> <span class="badge bg-warning">@Model.Status</span></p>
            <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
    </div>
</div>